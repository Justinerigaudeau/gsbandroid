<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rigaudeau.gsbandroid.formulaire"><![CDATA[

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">













    ]]>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Formulaire"
        android:id="@+id/txtFormulaire"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Info Visiteur :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFormulaire"
        android:layout_marginTop="15dp"
        android:id="@+id/infoVisiteur"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/txtRecap"
        android:textSize="14sp"
        android:layout_below="@+id/infoVisiteur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Code Praticien :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLibCode"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtRecap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtCode"
        tools:textSize="12sp"
        android:layout_alignTop="@+id/txtLibCode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txtLibCode"
        android:layout_alignLeft="@+id/txtFormulaire"
        android:layout_alignStart="@+id/txtFormulaire" />

    <TextView
        android:text="Nom :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLibCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/txtLibName"
        android:layout_alignRight="@+id/txtLibCode"
        android:layout_alignEnd="@+id/txtLibCode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignTop="@+id/txtLibName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtName"
        tools:textSize="12sp"
        android:layout_alignBottom="@+id/txtLibName"
        android:layout_toEndOf="@+id/txtLibName"
        android:layout_alignLeft="@+id/txtCode"
        android:layout_alignStart="@+id/txtCode" />

    <TextView
        android:text="Prénom :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLibName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/txtLibPrenom"
        android:layout_alignRight="@+id/txtLibName"
        android:layout_alignEnd="@+id/txtLibName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtPrenom"
        tools:textSize="12sp"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_alignTop="@+id/txtLibPrenom"
        android:layout_alignBottom="@+id/txtLibPrenom" />

    <TextView
        android:text="Activité :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLibActivite"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtLibPrenom"
        android:layout_alignEnd="@+id/txtLibPrenom" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/txtLibActivite"
        android:layout_alignLeft="@+id/txtPrenom"
        android:layout_alignStart="@+id/txtPrenom"
        android:id="@+id/cbxActivite" />

</RelativeLayout>
