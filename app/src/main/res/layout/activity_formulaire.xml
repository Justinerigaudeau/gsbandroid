<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rigaudeau.gsbandroid.formulaire"
    tools:ignore="DuplicateIds"><![CDATA[


   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_gravity="center_horizontal">
   ]]>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Formulaire"
        android:id="@+id/txtFormulaire"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:gravity="center" />

    <TextView
        android:text="Info Visiteur :"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFormulaire"
        android:layout_marginTop="15dp"
        android:id="@+id/infoVisiteur"
        android:gravity="left|center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Code Praticien :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLibCode"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtRecap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/infoVisiteur"
        android:layout_alignEnd="@+id/infoVisiteur" />

    <TextView
        android:text="Nom :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLibName"
        android:layout_below="@+id/txtCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignRight="@+id/txtLibCode"
        android:layout_alignEnd="@+id/txtLibCode" />

    <EditText
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtRecap"
        android:layout_alignBaseline="@+id/infoVisiteur"
        android:layout_alignBottom="@+id/infoVisiteur"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtCode"
        tools:textSize="12sp"
        android:layout_alignBaseline="@+id/txtLibCode"
        android:layout_alignBottom="@+id/txtLibCode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtRecap"
        android:layout_alignStart="@+id/txtRecap" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtName"
        tools:textSize="12sp"
        tools:ignore="RtlCompat"
        android:layout_alignBaseline="@+id/txtLibName"
        android:layout_alignBottom="@+id/txtLibName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtCode"
        android:layout_alignStart="@+id/txtCode" />

    <TextView
        android:text="Prénom :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLibPrenom"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtLibName"
        android:layout_alignEnd="@+id/txtLibName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtPrenom"
        tools:textSize="12sp"
        android:layout_alignBaseline="@+id/txtLibPrenom"
        android:layout_alignBottom="@+id/txtLibPrenom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:text="Activité :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLibActivite"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/txtPrenom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtLibPrenom"
        android:layout_alignEnd="@+id/txtLibPrenom" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerActivite"
        android:layout_alignTop="@+id/txtLibActivite"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtPrenom"
        android:layout_alignStart="@+id/txtPrenom" />

    <RadioButton
        android:text="Négatif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNegatif"
        android:layout_alignBaseline="@+id/btnPositif"
        android:layout_alignBottom="@+id/btnPositif"
        android:layout_toRightOf="@+id/txtLibActivite"
        android:layout_toEndOf="@+id/txtLibActivite" />

    <RadioButton
        android:text="Indifférent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIndif"
        android:layout_alignBaseline="@+id/btnNegatif"
        android:layout_alignBottom="@+id/btnNegatif"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Avis sur le cabinet :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cabinet"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/btnPositif"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Positif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPositif"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="VALIDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnNegatif"
        android:layout_alignStart="@+id/btnNegatif"
        android:id="@+id/btnValider" />


</RelativeLayout>

